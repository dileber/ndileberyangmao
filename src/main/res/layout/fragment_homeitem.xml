<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    card_view:cardBackgroundColor="#7a7aea"

    card_view:cardCornerRadius="10dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"

    card_view:contentPadding="10dp">



    <LinearLayout

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
    android:orientation="vertical"
    android:layout_width="@dimen/home_list_left_margen_width"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_gravity="center_horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
    android:id="@+id/list_home_image"
    android:layout_width="40dp"
    android:layout_height="40dp"
    fresco:roundAsCircle="true"
    fresco:roundedCornerRadius="180dp"
    fresco:actualImageScaleType="focusCrop"
    android:layout_centerVertical="true" />


    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:id="@+id/list_home_name"
    android:text="name"/>

    </LinearLayout>
    <LinearLayout
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/home_list_right_margen"
    android:layout_marginRight="@dimen/home_list_right_margen"
    android:layout_height="wrap_content">

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/home_list_title"
    android:textColor="@color/black"
    android:singleLine="true"
    android:id="@+id/list_home_title"
    android:text="title"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="@color/black"
    android:maxLines="2"
    android:id="@+id/list_home_content"
    android:text="content"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:textColor="@color/black"
    android:id="@+id/list_home_time"
    android:text="time"/>

    </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>


